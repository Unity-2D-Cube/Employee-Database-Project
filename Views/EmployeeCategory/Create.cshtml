@model EmployeeCategory
<form method="post">
    <div class="border-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-light">Dodaj Zaposlenog</h2>
        </div>
        <hr />
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Ime"></label>
        <input asp-for="Ime" class="form-control bg-dark text-light" style="width:200px" />
        <span asp-validation-for="Ime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Prezime</label>
        <input asp-for="Prezime" class="form-control bg-dark text-light" style="width:200px" />
        <span asp-validation-for="Prezime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Adresa</label>
        <input asp-for="Adresa" class="form-control bg-dark text-light" style="width:480px" />
        <span asp-validation-for="Adresa" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Radna Pozicija</label>
        <input asp-for="RadnaPozicija" class="form-control bg-dark text-light" style="width:300px" />
        <span asp-validation-for="RadnaPozicija" class="text-danger"></span>
    </div>
