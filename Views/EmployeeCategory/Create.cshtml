    <div class="mb-3">
        <label>Bruto Plata RSD</label>
        <input asp-for="BrutoPlata_RSD" class="form-control bg-dark text-light" style="width:250px" />      
        <span asp-validation-for="BrutoPlata_RSD" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px"> <i class="bi bi-person-fill-check"></i> &nbsp; Sačuvaj Unos</button>
