@model EmployeeCategory
<form method="post">
    <div class="border-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-light">Add Employee</h2>
        </div>
        <hr />
    </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control bg-dark text-light" style="width:200px" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Lastname</label>
        <input asp-for="Lastname" class="form-control bg-dark text-light" style="width:200px" />
        <span asp-validation-for="Lastname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Address</label>
        <input asp-for="Address" class="form-control bg-dark text-light" style="width:480px" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Role</label>
        <input asp-for="Role" class="form-control bg-dark text-light" style="width:300px" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Gross Salary RSD</label>
        <input asp-for="GrossSalary_RSD" class="form-control bg-dark text-light" style="width:250px" />      
        <span asp-validation-for="GrossSalary_RSD" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px"> <i class="bi bi-person-fill-check"></i> &nbsp; Save Input</button>
    <a asp-controller="EmployeeCategory" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to employee list
    </a>    
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}