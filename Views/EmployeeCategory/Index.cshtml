@using Test_Project_Web.Models;
@model IEnumerable<EmployeeCategory> 
@{
    ViewData["Title"] = "Index";
}
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-light">Employee List</h2>
        </div>
        <div class=" align-text-top">
            <a asp-controller="EmployeeCategory" asp-action="Create"class="btn btn-primary">
               <i class="bi bi-person-plus"></i> &nbsp; Add New Employee
            </a>
        </div>        
        <div class=" align-text-bottom">
            <a asp-controller="EmployeeCategory" asp-action="Delete"class="btn btn-primary">
               <i class="bi bi-person-dash"></i> &nbsp; Delete Employee
            </a>
        </div>

        <div class=" align-text-bottom">
            <form method="post" asp-controller="EmployeeCategory" asp-action="Export">
                <input type="submit" value="Export" /> <i class="bi bi-download"></i> &nbsp; Export Employee Data(.xlsx)<i class="bi bi-filetype-xlsx"></i> &nbsp;
            </form>
        </div>
        <div class=" align-text-bottom"> 
            <form method="post" asp-controller="EmployeeCategory" asp-action="ExportToPDF">
                <input type="submit" id="btn-Submit" value="Export" />
                <i class="bi bi-download"></i> &nbsp; Export Employee Data(.pdf)<i class="bi bi-filetype-pdf"></i> &nbsp;
            </form>
        </div>
    </div>

<br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Lastname
            </th>
            <th>
                Address
            </th>
            <th>
                Role
            </th>
            <th>
                NetSalary_RSD
            </th>
            <th>
                NetSalary_EUR
            </th>
            <th>
                NetSalary_USD
            </th>
            <th>
                GrossSalary_RSD
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Id
                </td>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Lastname
                </td>
                <td width="30%">
                    @obj.Address
                </td>
                <td width="30%">
                    @obj.Role
                </td>
                <td width="30%">
                    @obj.NetSalary_RSD
                </td>
                <td width="30%">
                    @obj.NetSalary_EUR
                </td>
                <td width="30%">
                    @obj.NetSalary_USD
                </td>
                <td width="30%">
                    @obj.GrossSalary_RSD
                </td>                
            </tr>
        }
    </tbody>
</table>
</div>