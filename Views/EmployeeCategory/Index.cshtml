@using Test_Projekat_Web.Models;
@model IEnumerable<EmployeeCategory> 
@{
    ViewData["Title"] = "Index";
}
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-light">Lista Zaposlenih</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="EmployeeCategory" asp-action="Create"class="btn btn-primary">
               <i class="bi bi-person-plus"></i> &nbsp; Dodaj Novog Zaposlenog
            </a>
        </div>

        <div class="col-6 text-start">
            <form method="post" asp-controller="EmployeeCategory" asp-action="Export">
                <input type="submit" value="Izvezi" /> <i class="bi bi-download"></i> &nbsp; Izvezi Podateke o zaposlenima(.xlsx)<i class="bi bi-filetype-xlsx"></i> &nbsp;
            </form>
        </div>
        <div class="col-6 text-end"> 
            <form method="post" asp-controller="EmployeeCategory" asp-action="ExportToPDF">
                <input type="submit" id="btn-Submit" value="Izvezi" />
                <input id="Button1" type="button" value="Pošalji" onclick = "parent.location='mailto:abc@abc.com'" />
                <i class="bi bi-download"></i> <i class="bi bi-plus-lg"></i> <i class="bi bi-envelope-plus"></i> &nbsp; Izvezi I Pošalji Podateke o zaposlenima(.pdf)<i class="bi bi-filetype-pdf"></i> &nbsp;
            </form>
        </div>
    </div>

<br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Ime
            </th>
            <th>
                Prezime
            </th>
            <th>
                Adresa
            </th>
            <th>
                RadnaPozicija
            </th>
            <th>
                NetoPlata_RSD
            </th>
            <th>
                NetoPlata_EUR
            </th>
            <th>
                NetoPlata_USD
            </th>
            <th>
                BrutoPlata_RSD
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Ime
                </td>
                <td width="30%">
                    @obj.Prezime
                </td>
                <td width="30%">
                    @obj.Adresa
                </td>
                <td width="30%">
                    @obj.RadnaPozicija
                </td>
                <td width="30%">
                    @obj.NetoPlata_RSD
                </td>
                <td width="30%">
                    @obj.NetoPlata_USD
                </td>
                <td width="30%">
                    @obj.NetoPlata_EUR
                </td>
                <td width="30%">
                    @obj.BrutoPlata_RSD
                </td>                
            </tr>
        }
    </tbody>
</table>
</div>