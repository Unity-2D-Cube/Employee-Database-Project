@model EmployeeCategory
<form method="post">
    <div class="border-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-light">Delete Employee</h2>
        </div>
        <hr />
    </div>
    <p>Please Enter employee Id to delete the employee form database!</p>
    <div class="mb-3">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control bg-dark text-light" style="width:200px" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <button type="submit" value="Delete" class="btn btn-danger" style="width:150px"> <i class="bi bi-person-fill-check"></i> &nbsp; Save Input</button>
    <a asp-controller="EmployeeCategory" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to employee list
    </a>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}